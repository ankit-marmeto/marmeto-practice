{{ 'brand-collection-carousel.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding color-{{ section.settings.section_color_scheme }}">

  <div class="brand_collection_main page-width">
    <div class="collection_label">
      <div class="collection_heading h2">
        {{ section.settings.heading }}
      </div>
      <div class="collection_description h4">
        {{ section.settings.description }}
      </div>
    </div>

    <div
      class="splide"
      id="splide1"
      aria-label="">
      <div class="splide__track">
        <ul class="splide__list">
          {% for block in section.blocks %}
            {% assign collection = block.settings.collection %}
            <li class="splide__slide">
              {% if block.settings.alternate_collection_image == blank %}
                {% render 'collection-card'
                  , url: collection.url
                  , image: collection.featured_image
                  , title: collection.title
                  , brandImage: block.settings.brand_image %}
              {% else %}
                {% render 'collection-card'
                  , url: collection.url
                  , image: block.settings.alternate_collection_image
                  , title: collection.title
                  , brandImage: block.settings.brand_image %}
              {% endif %}
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>

  </div>
</div>
<script>
  document.addEventListener("DOMContentLoaded", function() {
    const slider = new Splide('#splide1', {
        type: 'slide',
        perPage: 3,
        perMove: 1,
        focus: 'left',
        arrows: false,
        pagination: false,
        gap: '20px',
        noDrag: '.no-drag',
        breakpoints: {
            750: {
                perPage: 1.4,
                gap: '15px',
                fixedHeight: '275px',
                pagination: true,
            }
        }
    });
    slider.mount();
  });
</script>


{% schema %}
  {
    "name": "Brand Collection Carousel",
    "tag": "section",
    "settings": [
      {
        "type": "range",
        "label": "Padding Top",
        "id": "padding_top",
        "default": 20,
        "min": 0,
        "max": 40,
        "step": 2,
        "unit": "px"
      },
      {
        "type": "range",
        "label": "Padding Bottom",
        "id": "padding_bottom",
        "default": 20,
        "min": 0,
        "max": 40,
        "step": 2,
        "unit": "px"
      },
      {
        "type": "color_scheme",
        "id": "section_color_scheme",
        "label": "t:sections.all.colors.label",
        "default": "background-1"
      },
      {
        "type": "text",
        "label": "Heading",
        "id": "heading",
        "default": "Trending Brands"
      }, {
        "type": "textarea",
        "label": "Description",
        "id": "description",
        "default": "The store locator helps customers easily"
      }
    ],
    "blocks": [
      {
        "type": "collection",
        "name": "Collection",
        "limit": 10,
        "settings": [
          {
            "type": "collection",
            "label": "Collection",
            "id": "collection"
          }, {
            "type": "image_picker",
            "label": "Alternate Collection Image",
            "id": "alternate_collection_image"
          }, {
            "type": "image_picker",
            "label": "Brand Image",
            "id": "brand_image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Brand Collection Carousel"
      }
    ]
  }
{% endschema %}