{{ "custom-quick-watch.css" | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="page-width quick-watch__wrapper section-{{ section.id }}-padding">
  {% if section.settings.heading-1 != blank %}
    <h1 class="custom-quick-watch__heading">
      {{ section.settings.heading-1 }}
      <span class="custom-quick-watch__heading-color">
        {{ section.settings.heading-2 }}
      </span>
    </h1>
  {% endif %}


  <div class="custom-image-grid-new">

    {% for block in section.blocks %}
      <div class="grid-ele">
        {% if block.settings.image %}
          {% render 'responsive-picture'
            , desktopImage: block.settings.image
            , class: "image-fit" %}
        {% endif %}
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
  {
    "name": "Custom image grid",
    "settings": [
      {
        "type": "text",
        "id": "heading-1",
        "label": "Heading part 1"

      },
      {
        "type": "text",
        "id": "heading-2",
        "label": "Heading part 2"

      },
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Image Block",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image",
            "info": "Recommended size 420px X 400px"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "custom image grid"
      }
    ],
    "max_blocks": 9
  }
{% endschema %}