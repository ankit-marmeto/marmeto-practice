{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  .an-offer-slider-{{ section.id }} {
    background: {{ section.settings.background }};


  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="an-offer-slider__wrapper an-offer-slider-{{ section.id }}">
  {% if section.settings.heading != blank %}
    <h1 class="an-offer-slider__heading">

      <span class="an-offer-slider__heading-color">
        {{ section.settings.heading }}
      </span>
    </h1>
    <div class="page-width an-offer-slider__container"></div>
    <div class="an-offer-slider__cutout-image">
      {% render 'responsive-picture'
        , desktopImage: section.settings.cutout-image
        , class: "image-fit" %}
    </div>
  {% endif %}

</section>

<style>
  .an-offer-slider__wrapper {
    position: relative;
  }
  .an-offer-slider__heading {
    text-align: center;
    font-family: "BalooTamma";
    font-weight: 700;
    font-size: 48px;
    color: #ffbb8a;
  }
  .an-offer-slider__heading-color {
    color: #ffcd00;
  }
  .an-offer-slider__cutout-image {
    position: absolute;
    bottom: -9px;
    left: 0;
  }
</style>

{% schema %}
  {
    "name": "An offer slider",
    "tag": "section",
    "class": "section an-offer-slider",
    "settings": [
      {
        "type": "color_background",
        "label": "Background",
        "id": "background"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"

      },
      {
        "type": "range",
        "id": "border_radius_top_left",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Border radius top left ",
        "default": 36
      },
      {
        "type": "range",
        "id": "border_radius_top_right",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Border radius top right ",
        "default": 36
      }, {
        "type": "range",
        "id": "border_radius_bottom_left",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Border radius bottom left ",
        "default": 36
      }, {
        "type": "range",
        "id": "border_radius_bottom_right",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Border radius bottom right ",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_left",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding left ",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_right",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Padding right ",
        "default": 36
      }, {
        "type": "image_picker",
        "label": "Upper cutout image ",
        "id": "upper-cutout-image"
      }, {
        "type": "image_picker",
        "label": "Bottom cutout image",
        "id": "bottom-cutout-image"
      }, {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      }, {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ],
    "blocks": [
      {
        "type": "slide",
        "name": "Slide",
        "settings": [
          {
            "type": "image_picker",
            "id": "splide",
            "label": "Splide image"
          }, {
            "type": "url",
            "id": "url",
            "label": "Url"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "An offer slider"
      }
    ]
  }
{% endschema %}