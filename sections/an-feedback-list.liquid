{{ "an-feedback-list.css" | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="an-feedback-list__wrapper">
  <h1 class="an-feedback-list__heading">{{ section.settings.heading-1 }}
    <span class="an-feedback-list__heading-2">{{ section.settings.heading-2 }}</span>
  </h1>
  <div class="page-width an-feedback-list__container">
    {% for block in section.blocks %}
      <div class="an-feedback-list__feedback-card">
        <div class="an-feedback-list__card-image">
          {% render 'responsive-picture'
            , desktopImage: block.settings.image
            , class: "image-fit" %}
        </div>
        <div class="an-feedback-list__user-name" style="color: {{block.settings.color}}">
          {{ block.settings.text }}
        </div>
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
  {
    "name": "An feedback list",
    "tag": "section",
    "class": "section an-feedback-list",
    "settings": [
      {
        "type": "text",
        "id": "heading-1",
        "label": "Heading part 1"

      },
      {
        "type": "text",
        "id": "heading-2",
        "label": "Heading part 2"

      },
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      }, {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ],
    "blocks": [
      {
        "type": "feedback-card",
        "name": "Feedback card",
        "limit": 5,
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "User image"
          }, {
            "type": "text",
            "id": "text",
            "label": "Name"
          }, {
            "type": "color",
            "id": "color",
            "label": "Color"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "An feedback list"
      }
    ]
  }
{% endschema %}