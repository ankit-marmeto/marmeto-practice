 <div class="blog_catagory">
    
    <p class="catagory_text">Categories</p>
    <div class="catagory_line"></div>

    {% for block in section.blocks %}
      {% if block.type == "blog" %}
      {%- assign current_url = blog.url |  handleize |  split: "-" |  last  -%}
      {%- assign blog_title = block.settings.blog1.title | handleize -%}
      
      <div class="blog_catagory_container">
        <a  href="{{ block.settings.blog1.url }}" class="blog__title  {% if current_url == blog_title %} active__blog{% endif %}">
          {% if block.settings.blog_title != blank %}
            {{ block.settings.blog_title }}
          {% else %}
            {{ block.settings.blog1.title }}
          {% endif %}
          <p class="article_count"> ({{ block.settings.blog1.articles_count }}) </p>  
        </a>
      </div>
        {% endif %}
    {% endfor %}
 </div>



