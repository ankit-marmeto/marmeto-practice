  </div>
 

  <div class="blog_catagory">
    <p class="catagory_text">Popular Tags</p>
    <div class="catagory_line"></div>


    <div class="blog_tag_list">
      {% for tag in blog.all_tags %}
        {% if tag contains "popular__" %}
          {% assign tag_name = tag | remove_first: "popular__" | remove: "__"  |  capitalize %}
          <li>
            
          <a href="{{ blog.url }}/tagged/{{ tag | handle }}" 
             class="{% if current_tags contains tag %}active{% endif    %}">
            {{ tag_name }}
          </a>
          </li>
      
        {% endif %}
      {% endfor %}
    </div>


    </div>
