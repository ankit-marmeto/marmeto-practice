{% comment %} 
@param input date{text}
@param color countdown color
{% render 'timer' , input:section.settings.date %} 
{% endcomment %}
{% style %}
  .timer_container {
    display: flex;
    width: 100%;
    justify-content: center;
    gap: 25px;
  }
  .promotional-banner__text-timer {
    width: 100%;
  }
  .hc {
    font-size: 2.4rem;
    font-weight: 500;
    line-height: 1.4em;
  }

  span.countdown-item {
    display: flex;
    flex-direction: column;
    background: white;
    align-items: center;
    padding: 10px 15px;
  }
  .color-gr-100 {
    font-size: 1.4rem;
    color: #A6A6A6;
    line-height: 1em;
  }
  @media screen and (min-width: 750px) {
    .timer_container {
      gap: 3.6rem;
    }
    .hc {
      font-size: 3.6rem;
    }
    .color-gr-100 {
      font-size: 1.8rem;
    }
    span.countdown-item {
      padding: 1.2rem 2.4rem 1.7rem;
    }
  }
  @media screen and (min-width: 990px) {
    .countdown-item {
      background: {{ count_background }};
    }
  }
{% endstyle %}
<input
  value={{ input }}
  style="display:none;"
  class="promotional-banner__input-text-box" />
<div id="countdown" class="promotional-banner__countdown-container">
  <div class="timer_container">
    <span class="countdown-item">
      <span id="days" class="countdown-value hc text-color{{section.id}}">00</span>

      <span class="countdown-label h4 color-gr-100">DAYS</span>
    </span>
    <span class="countdown-item">
      <span id="hours" class="countdown-value hc text-color{{section.id}}">00</span>

      <span class="countdown-label h4 color-gr-100 ">HRS</span>
    </span>
    <span class="countdown-item">
      <span id="minutes" class="countdown-value hc text-color{{section.id}}">00</span>

      <span class="countdown-label h4 color-gr-100 ">MIN</span>
    </span>
    <span class="countdown-item">
      <span id="seconds" class="countdown-value hc text-color{{section.id}}">00</span>

      <span class="countdown-label h4 color-gr-100  ">SECS</span>
    </span>
  </div>
</div>
<script src="{{ 'timer.js' | asset_url }}" defer="defer"></script>